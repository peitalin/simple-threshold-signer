{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/src/*"],
      "@server": ["../server/src/index.ts"],
      "@server/*": ["../server/src/*"],
      "@build-paths": ["../sdk/build-paths.ts"]
    }
  },
  "include": ["src/**/*"]
}
