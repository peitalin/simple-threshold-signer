{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "rootDir": ".."
  },
  "include": [
    "../client/src/**/*",
    "../server/src/**/*",
    "../shared/src/**/*",
    "build-paths.ts"
  ],
  "exclude": [
    "../client/src/**/*.test.ts",
    "../client/src/**/*.test.tsx",
    "../server/src/**/*.test.ts",
    "../server/src/**/*.test.tsx",
    "../examples/",
    "../docs/",
    "../tests/"
  ]
}
